# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/bagitup
# For MongoDB Atlas, use:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/bagitup?retryWrites=true&w=majority

# Firebase Admin SDK (paste your service account JSON as a single line or provide path)
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
# Or set the JSON directly:
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000

# JWT Secret (for additional API auth if needed)
JWT_SECRET=your_jwt_secret_here
